<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SukiUI.Controls.CircleProgressBar"
             xmlns:suki="clr-namespace:SukiUI.Controls">
  <UserControl.Styles>
    <Style Selector="suki|CircleProgressBar">
      <Setter Property="Template">
        <ControlTemplate>
          <Grid >
            <Arc SweepAngle="360" StartAngle="0" Stroke="WhiteSmoke" StrokeThickness="{TemplateBinding StrokeWidth}"  Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" Stretch="None" >

            </Arc>
            <Arc SweepAngle="{TemplateBinding Value}" StartAngle="270" Stroke="#2f54eb" StrokeThickness="{TemplateBinding StrokeWidth}"   Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" Stretch="None" >
              
            </Arc>
            <ContentControl Content="{TemplateBinding Content}" Margin="{TemplateBinding StrokeWidth}"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></ContentControl>
          </Grid>
        </ControlTemplate>
      </Setter>
    </Style>
    </UserControl.Styles>

</UserControl>
