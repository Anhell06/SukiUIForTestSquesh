<UserControl x:Class="SukiUI.Controls.TouchInput.TouchKeyboard.TouchKeyboard"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Button Classes="Basic" Click="OpenPopup">
        <Border Padding="10,5"
                Background="Transparent"
                BorderBrush="{DynamicResource SukiBorderBrush}"
                BorderThickness="1"
                CornerRadius="8">

            <TextBlock Name="textValue"
                       Margin="0,1,0,0"
                       FontSize="14" />

        </Border>
    </Button>
</UserControl>
