<UserControl x:Class="SukiUI.Controls.TouchInput.TouchNumericPad.TouchNumericPad"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Button Height="50"
            Classes="Basic"
            Click="OpenPopup">
        <Border Padding="12,0"
                Background="{DynamicResource SukiLightBackground}"
                BorderThickness="0"
                CornerRadius="30">

            <TextBlock Name="textValue"
                       Margin="0,5,0,0"
                       FontSize="15" />

        </Border>
    </Button>
</UserControl>
