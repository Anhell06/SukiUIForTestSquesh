<UserControl
    mc:Ignorable="d"
    x:Class="SukiUI.Controls.MobilePicker.MobilePicker"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="clr-namespace:SukiUI.Controls.MobilePicker"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:icons="clr-namespace:SukiUI.Content">
    <UserControl.Styles>
        <Style Selector="suki|MobilePicker">
            <Setter Property="Template">
                <ControlTemplate>
                    <Button Classes="Accent" Click="OpenPopup">
                        <DockPanel>
                            <PathIcon DockPanel.Dock="Right"
                                      Foreground="Gray"
                                      Data="{x:Static icons:Icons.ChevronDown}"/>
                            <TextBlock
                                FontSize="17"
                                Margin="0,0,10,0"
                                Text="{TemplateBinding SelectedItem}" />

                        </DockPanel>
                    </Button>
                </ControlTemplate>
            </Setter>
        </Style>
    </UserControl.Styles>
</UserControl>
