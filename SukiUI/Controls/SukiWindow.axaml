<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:icons="clr-namespace:SukiUI.Content"
    xmlns:suki="clr-namespace:SukiUI.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTheme TargetType="suki:SukiWindow" x:Key="SukiWindowTheme">
        <Setter Property="ExtendClientAreaChromeHints" Value="NoChrome" />
        <Setter Property="ExtendClientAreaTitleBarHeightHint" Value="-1" />
        <Setter Property="ExtendClientAreaToDecorationsHint" Value="True" />
        <Setter Property="FontFamily" Value="{StaticResource QuicksandFont}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <Grid IsHitTestVisible="True">
                        <VisualLayerManager IsHitTestVisible="True">
                            <suki:SukiHost>
                                <Grid x:Name="PART_Root">
                                    
                                        <suki:SukiBackground Name="PART_Background" IsHitTestVisible="False" />
                                   
                                    
                                    <DockPanel LastChildFill="True">
                                        <!--  Title Bar...  -->
                                        <Grid DockPanel.Dock="Top">
                                            <Grid.Styles>
                                                <Style Selector="suki|SukiWindow[ShowBottomBorder=True] /template/ Border#PART_BottomBorder">
                                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                </Style>
                                                <Style Selector="suki|SukiWindow[ShowBottomBorder=False] /template/ Border#PART_BottomBorder">
                                                    <Setter Property="BorderThickness" Value="0,0,0,0" />
                                                </Style>
                                            </Grid.Styles>
                                            <suki:GlassCard
                                                BorderThickness="0"
                                                CornerRadius="0"
                                                Name="PART_TitleBarBackground" />
                                            <StackPanel>
                                                <Grid>

                                                    <DockPanel LastChildFill="True" Margin="12,9">
                                                        <StackPanel
                                                            DockPanel.Dock="Right"
                                                            FlowDirection="RightToLeft"
                                                            Orientation="Horizontal"
                                                            Spacing="7"
                                                            VerticalAlignment="Center">
                                                            <!--  Close button  -->
                                                            <Button Classes="Basic Rounded WindowControlsButton Red" Name="PART_CloseButton">
                                                                <PathIcon Classes="WindowControlsIcon" Data="{x:Static icons:Icons.WindowClose}" />
                                                            </Button>

                                                            <!--  Maximize button  -->
                                                            <Button
                                                                Classes="Basic Rounded WindowControlsButton"
                                                                IsVisible="{TemplateBinding IsMaximizeButtonEnabled}"
                                                                Name="PART_MaximizeButton">
                                                                <PathIcon
                                                                    Classes="WindowControlsIcon"
                                                                    Data="{x:Static icons:Icons.WindowMaximize}"
                                                                    x:Name="MaximizeIcon" />
                                                            </Button>

                                                            <!--  Minimize button  -->
                                                            <Button
                                                                Classes="Basic Rounded WindowControlsButton"
                                                                IsVisible="{TemplateBinding IsMinimizeButtonEnabled}"
                                                                Name="PART_MinimizeButton"
                                                                VerticalContentAlignment="Bottom">
                                                                <PathIcon
                                                                    Classes="WindowControlsIcon"
                                                                    Data="{x:Static icons:Icons.WindowMinimize}"
                                                                    Margin="0,0,0,4"
                                                                    VerticalAlignment="Bottom" />
                                                            </Button>
                                                        </StackPanel>

                                                        <StackPanel
                                                            IsHitTestVisible="False"
                                                            Orientation="Horizontal"
                                                            Spacing="10"
                                                            VerticalAlignment="Center">
                                                            <ContentControl
                                                                Content="{TemplateBinding LogoContent}"
                                                                HorizontalAlignment="Left"
                                                                IsHitTestVisible="False" />
                                                            <TextBlock
                                                                FontSize="{TemplateBinding TitleFontSize}"
                                                                FontWeight="{TemplateBinding TitleFontWeight}"
                                                                IsHitTestVisible="False"
                                                                Text="{TemplateBinding Title}"
                                                                VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </DockPanel>

                                                </Grid>
                                                <Menu IsVisible="{TemplateBinding IsMenuVisible}" ItemsSource="{TemplateBinding MenuItems}" />
                                                <Border BorderBrush="{DynamicResource SukiBorderBrush}" Name="PART_BottomBorder" />
                                            </StackPanel>
                                        </Grid>

                                        <ContentPresenter
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            CornerRadius="10"
                                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            IsHitTestVisible="True"
                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                            x:Name="PART_ContentPresenter" />
                                    </DockPanel>
                                </Grid>
                            </suki:SukiHost>
                        </VisualLayerManager>
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
    <ControlTheme
        BasedOn="{StaticResource SukiWindowTheme}"
        TargetType="suki:SukiWindow"
        x:Key="{x:Type suki:SukiWindow}" />
</ResourceDictionary>