    <ItemGroup>
      <None Remove="LICENSE" />
      <None Remove="Roboto-Regular.ttf" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia" Version="11.0.5" />
        <PackageReference Include="Avalonia.Skia" Version="11.0.5" />
        <PackageReference Include="SkiaSharp" Version="2.88.6" />
