        <None Remove="CustomFont\Quicksand-Light.ttf" />
        <AvaloniaResource Include="CustomFont\Quicksand-Light.ttf" />
        <None Remove="CustomFont\Quicksand-Medium.ttf" />
        <AvaloniaResource Include="CustomFont\Quicksand-Medium.ttf" />
