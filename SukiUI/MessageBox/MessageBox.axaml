<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        Width="400" Height="200"

           ExtendClientAreaToDecorationsHint="True"
        xmlns:material="using:Material.Icons.Avalonia"
Background="White"
        x:Class="SukiUI.MessageBox.MessageBox"
        >
  <Window.Styles>
    <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml"></StyleInclude>
    <StyleInclude Source="avares://SukiUI/Theme/Index.xaml"/>
  </Window.Styles>
  <DockPanel>
    <TextBlock Name="Title" DockPanel.Dock="Top" Classes="h2" Margin="0,25,0,-45" HorizontalAlignment="Center" >Title</TextBlock>
     <material:MaterialIcon Name="Icone" DockPanel.Dock="Left" Height="75" Width="75" Margin="25,0,0,0" VerticalAlignment="Center" Foreground="#2f54eb" Kind="InformationCircle"></material:MaterialIcon>
    <TextBlock Name="Message" Margin="20" VerticalAlignment="Center"  HorizontalAlignment="Center" TextWrapping="Wrap" DockPanel.Dock="Right">blub this is an information messag e blublbublbub</TextBlock>
    
      <Button Click="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" DockPanel.Dock="Bottom"  Margin="283,0,0,17">
        <TextBlock>Ok</TextBlock>
        
        
      </Button>
      
 
  </DockPanel>
</Window>
