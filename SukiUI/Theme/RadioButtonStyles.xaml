<Styles xmlns="https://github.com/avaloniaui"
        xmlns:material="using:Material.Icons.Avalonia"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Background="White" Padding="20">
      <StackPanel>
        <RadioButton Margin="10" Classes="MenuItem">
          <DockPanel>
            <material:MaterialIcon></material:MaterialIcon>
            <TextBlock>test 2</TextBlock>
          </DockPanel>
          
        </RadioButton>
        <RadioButton Margin="10" Classes="MenuItem">
          <TextBlock>test 2</TextBlock>
        </RadioButton>
        <RadioButton Margin="10" Classes="MenuItem">
          <TextBlock>test 3</TextBlock>
        </RadioButton>
        
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <Style Selector="RadioButton.MenuItem">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderMidBrush}"/>
    <Setter Property="BorderThickness" Value="1.5"/>
    <Setter Property="Template">
      <ControlTemplate>
        <Grid >
          <Border CornerRadius="5" Background="{TemplateBinding Background}">
          <ContentPresenter Name="PART_ContentPresenter"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Content="{TemplateBinding Content}"
                            Margin="4,0,0,0"
                            RecognizesAccessKey="True"
                            VerticalAlignment="Center"
                            Grid.Column="1"/>
          </Border>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
  
  <Style Selector="RadioButton">
    
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderMidBrush}"/>
    <Setter Property="BorderThickness" Value="1.5"/>
    <Setter Property="Template">
      <ControlTemplate>
        <Grid ColumnDefinitions="Auto,*" Background="{TemplateBinding Background}">
          <Ellipse Name="border"
                   Stroke="{TemplateBinding BorderBrush}"
                   StrokeThickness="1.5"
                   Width="18"
                   Height="18"
                   VerticalAlignment="Center"/>
          <Ellipse Name="checkMark"
                   Width="10"
                   Height="10" Fill="#2f54eb"
                   Stretch="Uniform"
                   UseLayoutRounding="False"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
          <Ellipse Name="indeterminateMark"
                   Fill="{DynamicResource ThemeAccentBrush}"
                   Width="10"
                   Height="10"
                   Stretch="Uniform"
                   UseLayoutRounding="False"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
          <ContentPresenter Name="PART_ContentPresenter"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Content="{TemplateBinding Content}"
                            Margin="4,0,0,0"
                            RecognizesAccessKey="True"
                            VerticalAlignment="Center"
                            Grid.Column="1"/>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="RadioButton.MenuItem:pointerover /template/ Border">
    <Setter Property="Background" Value="#f4f4f4"></Setter>
  </Style>

  <Style Selector="RadioButton.MenuItem:checked /template/ Border">
    <Setter Property="Background" Value="#2f54eb"></Setter>
  </Style>
  <Style Selector="RadioButton.MenuItem:checked  TextBlock">
    <Setter Property="Foreground" Value="White"></Setter>
    <Setter Property="FontWeight" Value="DemiBold"></Setter>
  </Style>

  <Style Selector="RadioButton.MenuItem:checked  material|MaterialIcon">
    <Setter Property="Foreground" Value="White"></Setter>
    
  </Style>




  <Style Selector="RadioButton:pointerover /template/ Ellipse#border">
    <Setter Property="Stroke" Value="{DynamicResource ThemeBorderHighBrush}"/>
  </Style>
  <Style Selector="RadioButton /template/ Ellipse#checkMark">
    <Setter Property="Fill" Value="{DynamicResource HighlightBrush}"/>
    <Setter Property="IsVisible" Value="False"/>
  </Style>
  <Style Selector="RadioButton /template/ Ellipse#indeterminateMark">
    <Setter Property="IsVisible" Value="False"/>
  </Style>
  <Style Selector="RadioButton:checked /template/ Ellipse#checkMark">
    <Setter Property="IsVisible" Value="True"/>
  </Style>
  <Style Selector="RadioButton:indeterminate /template/ Ellipse#indeterminateMark">
    <Setter Property="IsVisible" Value="True"/>
  </Style>
  <Style Selector="RadioButton:disabled /template/ Ellipse#border">
    <Setter Property="Opacity" Value="{DynamicResource ThemeDisabledOpacity}"/>
  </Style>
</Styles>