<UserControl x:Class="SukiTest.CircleProgressBarsTestMVVM.ControlsDemo"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:SukiUI.Models;assembly=SukiUI"
             xmlns:objectModel="clr-namespace:System.Collections.ObjectModel;assembly=System.ObjectModel"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:theme="clr-namespace:SukiUI.Theme;assembly=SukiUI"
             Background="{DynamicResource SukiBackground}"
             mc:Ignorable="d">
    <ScrollViewer>
        <ScrollViewer.Styles>
            <Style Selector="controls|GlassCard">
                <Setter Property="Margin" Value="20" />
            </Style>
        </ScrollViewer.Styles>
        <WrapPanel Margin="20">
            <controls:GlassCard>
                <TabControl>
                    <TabItem Header="Red Tab">
                        <Grid Height="50"
                              Margin="0,10,0,0"
                              Background="#44ff0000" />
                    </TabItem>
                    <TabItem Header="Green Tab">
                        <Grid Height="50"
                              Margin="0,10,0,0"
                              Background="#4400ff00" />
                    </TabItem>
                    <TabItem Header="Blue Tab">
                        <Grid Height="50"
                              Margin="0,10,0,0"
                              Background="#440000ff" />
                    </TabItem>
                </TabControl>
            </controls:GlassCard>
            <controls:GlassCard>
                <ToggleButton Margin="40,10" Classes="Switch" />
            </controls:GlassCard>

            <controls:GlassCard>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Spacing="15">
                        <Button Classes="Flat" Content="Flat" />
                        <Button Classes="Flat Rounded" Content="Rounded" />

                    </StackPanel>
                    <StackPanel Margin="15,0,0,0" Spacing="15">
                        <Button Classes="Basic" Content="Basic" />
                        <Button Content="Neutral" />
                        <Button Classes="Outlined" Content="Outlined" />
                    </StackPanel>
                </StackPanel>
            </controls:GlassCard>

            <controls:GlassCard>
                <Slider Width="200"
                        Margin="20,10"
                        IsSnapToTickEnabled="True"
                        Maximum="100"
                        Minimum="0"
                        TickFrequency="1"
                        Value="50" />
            </controls:GlassCard>

            <controls:GlassCard Width="250" Margin="20">
                <StackPanel Spacing="15">
                    <TextBox Text="This is Text" />
                    <TextBox theme:TextBoxExtensions.AddDeleteButton="True" Text="Delete Enabled" />
                    <TextBox Watermark="Watermark" />
                    <TextBox theme:TextBoxExtensions.Prefix="http" Watermark="avaloniaui.com" />
                </StackPanel>
            </controls:GlassCard>

            <controls:GlassCard>

                <ComboBox Width="180"
                          Height="45"
                          Margin="10"
                          PlaceholderText="Select an Color">
                    <ComboBoxItem>
                        <TextBlock>Red</TextBlock>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock>Green</TextBlock>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock>Blue</TextBlock>
                    </ComboBoxItem>
                </ComboBox>

            </controls:GlassCard>

            <controls:GlassCard>
                <NumericUpDown Height="42" Value="10" />
            </controls:GlassCard>

            <controls:GlassCard>
                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                    <RadioButton Margin="5">
                        <TextBlock Text="Item 1" />
                    </RadioButton>
                    <RadioButton Margin="5">
                        <TextBlock Text="Item 2" />
                    </RadioButton>
                    <RadioButton Margin="5">
                        <TextBlock Text="Item 3" />
                    </RadioButton>
                </StackPanel>
            </controls:GlassCard>

            <controls:GlassCard>
                <StackPanel Orientation="Vertical">
                    <RadioButton Width="100"
                                 Margin="5"
                                 Classes="GigaChips">
                        <TextBlock Margin="14" Text="Item 1" />
                    </RadioButton>
                    <RadioButton Width="100"
                                 Margin="5"
                                 Classes="GigaChips">
                        <TextBlock Margin="14" Text="Item 2" />
                    </RadioButton>
                </StackPanel>
            </controls:GlassCard>

            <controls:GlassCard>
                <DatePicker />
            </controls:GlassCard>
            <controls:GlassCard Margin="20">
                <controls:WaveProgress IsTextVisible="True" Value="40" />
            </controls:GlassCard>

            <controls:GlassCard Width="500">
                <controls:Stepper Index="1">
                    <controls:Stepper.Steps>
                        <objectModel:ObservableCollection x:TypeArguments="system:String">
                            <system:String>Step One</system:String>
                            <system:String>Step Two</system:String>
                            <system:String>Step Three</system:String>
                        </objectModel:ObservableCollection>
                    </controls:Stepper.Steps>
                </controls:Stepper>
            </controls:GlassCard>
            <controls:GlassCard>
                <controls:CircleProgressBar Width="130"
                                            Height="130"
                                            StrokeWidth="11"
                                            Value="60">
                    <TextBlock Margin="0,1,0,0" Classes="h3">60%</TextBlock>
                </controls:CircleProgressBar>
            </controls:GlassCard>
            <controls:GlassCard>
                <controls:Loading />
            </controls:GlassCard>

            <controls:GlassCard>
                <ProgressBar Value="60" />
            </controls:GlassCard>

            <controls:GlassCard>
                <DataGrid Name="myDataGrid"
                          AutoGenerateColumns="True"
                          IsReadOnly="True" />
            </controls:GlassCard>

            <controls:GlassCard>
                <ListBox Width="150">
                    <TextBlock>item 1</TextBlock>
                    <TextBlock>item 2</TextBlock>
                    <TextBlock>item 3</TextBlock>
                </ListBox>
            </controls:GlassCard>
            <controls:GlassCard>
                <TreeView Width="150">
                    <TreeViewItem Header="Test 1">
                        <TreeViewItem Header="Test 2" />
                        <TreeViewItem Header="Test 3" />
                    </TreeViewItem>
                    <TreeViewItem Header="Test 4" />
                </TreeView>
            </controls:GlassCard>

            <controls:GlassCard>
                <controls:GroupBox>
                    <controls:GroupBox.Header>
                        <TextBlock Text="Header" />
                    </controls:GroupBox.Header>
                    <Grid Width="300" Height="100">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Test Content</TextBlock>
                    </Grid>
                </controls:GroupBox>
            </controls:GlassCard>

            <controls:GlassCard>
                <controls:BusyArea Name="BA" IsBusy="False">
                    <Button Margin="20,0"
                            Classes="Flat"
                            Click="Button_OnClick"
                            Content="Make Busy" />
                </controls:BusyArea>
            </controls:GlassCard>

            <controls:GlassCard Width="250">
                <Expander Header="Click To Expand">
                    <TextBlock Margin="25"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        Expanded
                    </TextBlock>
                </Expander>
            </controls:GlassCard>

            <controls:GlassCard Width="250">
                <CheckBox IsChecked="True">
                    <TextBlock Text="Check This" />
                </CheckBox>
            </controls:GlassCard>

            <controls:GlassCard>
                <DockPanel LastChildFill="True">
                    <TextBlock Classes="h3"
                               DockPanel.Dock="Top"
                               Text="Available Colour Themes" />
                    <ItemsControl x:Name="ThemeList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:SukiColorTheme">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Rectangle Width="15"
                                               Height="15"
                                               Fill="{Binding PrimaryBrush}" />
                                    <TextBlock FontSize="16"
                                               Foreground="{Binding PrimaryBrush}"
                                               Text="{Binding DisplayName}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>
            </controls:GlassCard>
        </WrapPanel>
    </ScrollViewer>
</UserControl>