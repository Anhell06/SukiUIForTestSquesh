<UserControl x:Class="SukiTest.StackTest"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:objectModel="clr-namespace:System.Collections.ObjectModel;assembly=System.ObjectModel"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <controls:SukiStackPage>
        <controls:SukiStackPage.Content>
            <controls:SettingsLayout Name="Settings">
                <controls:SettingsLayout.Items>
                    <objectModel:ObservableCollection x:TypeArguments="controls:SettingsLayoutItem">
                        <controls:SettingsLayoutItem Header="Profile Informations">
                            <controls:SettingsLayoutItem.Content>
                                <StackPanel>
                                    <DockPanel Margin="0,15">
                                        <TextBox Width="150"
                                                 DockPanel.Dock="Right"
                                                 Text="myUsername" />
                                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="15"
                                                       FontWeight="DemiBold"
                                                       Text="Username" />
                                            <TextBlock Margin="0,7,0,0"
                                                       FontSize="13"
                                                       Text="The name that peoples will see when they will try to contact you"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DockPanel>
                                    <DockPanel Margin="0,15">
                                        <TextBox Width="150"
                                                 DockPanel.Dock="Right"
                                                 Text="myUsername@email.com" />
                                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="15"
                                                       FontWeight="DemiBold"
                                                       Text="Email" />
                                            <TextBlock Margin="0,7,0,0"
                                                       FontSize="13"
                                                       Text="The email used to get back your password if you forget it in the future"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DockPanel>

                                    <DockPanel Margin="0,15">
                                        <ToggleButton VerticalAlignment="Top"
                                                      Classes="Switch"
                                                      DockPanel.Dock="Right"
                                                      IsChecked="True" />
                                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="15"
                                                       FontWeight="DemiBold"
                                                       Text="Connected Status" />
                                            <TextBlock Margin="0,7,0,0"
                                                       FontSize="13"
                                                       Text="Let people see if you are connected and ready to chat or not"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DockPanel>

                                    <DockPanel Margin="0,15">
                                        <TextBlock DockPanel.Dock="Right"
                                                   FontSize="14"
                                                   FontWeight="DemiBold"
                                                   Text="English" />
                                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Left">

                                            <TextBlock FontSize="15"
                                                       FontWeight="DemiBold"
                                                       Text="Langage" />
                                            <TextBlock Margin="0,7,0,0"
                                                       FontSize="13"
                                                       Text="The langage used in your favorite apps"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DockPanel>
                                </StackPanel>
                            </controls:SettingsLayoutItem.Content>
                        </controls:SettingsLayoutItem>
                        <controls:SettingsLayoutItem Header="Privacy">
                            <controls:SettingsLayoutItem.Content>
                                <StackPanel>
                                    <DockPanel Margin="0,15">
                                        <ToggleButton VerticalAlignment="Top"
                                                      Classes="Switch"
                                                      DockPanel.Dock="Right"
                                                      IsChecked="True" />
                                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="15"
                                                       FontWeight="DemiBold"
                                                       Text="Allow people to find me" />
                                            <TextBlock Margin="0,7,0,0"
                                                       FontSize="13"
                                                       Text="Allow people with your cell number to connect with you"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DockPanel>
                                    <DockPanel Margin="0,15">
                                        <ToggleButton VerticalAlignment="Top"
                                                      Classes="Switch"
                                                      DockPanel.Dock="Right"
                                                      IsChecked="False" />
                                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="15"
                                                       FontWeight="DemiBold"
                                                       Text="Allow people to add me" />
                                            <TextBlock Margin="0,7,0,0"
                                                       FontSize="13"
                                                       Text="Allow your contacs to add you into groups"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DockPanel>

                                    <DockPanel Margin="0,15">
                                        <ToggleButton VerticalAlignment="Top"
                                                      Classes="Switch"
                                                      DockPanel.Dock="Right"
                                                      IsChecked="False" />
                                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="15"
                                                       FontWeight="DemiBold"
                                                       Text="Sync your contacts" />
                                            <TextBlock Margin="0,7,0,0"
                                                       FontSize="13"
                                                       Text="Allow us to access your contacts to help you find your friends"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DockPanel>

                                    <DockPanel Margin="0,15">
                                        <ToggleButton VerticalAlignment="Top"
                                                      Classes="Switch"
                                                      DockPanel.Dock="Right"
                                                      IsChecked="True" />
                                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="15"
                                                       FontWeight="DemiBold"
                                                       Text="Notifications" />
                                            <TextBlock Margin="0,7,0,0"
                                                       FontSize="13"
                                                       Text="Allow us to send you notifications for promotional products or discounts. Notifications can also be used to contact your friends."
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DockPanel>
                                </StackPanel>
                            </controls:SettingsLayoutItem.Content>
                        </controls:SettingsLayoutItem>
                        <controls:SettingsLayoutItem Header="Billing">
                            <controls:SettingsLayoutItem.Content>
                                <DataGrid Name="GridBilling"
                                          AutoGenerateColumns="True"
                                          IsReadOnly="True" />
                            </controls:SettingsLayoutItem.Content>
                        </controls:SettingsLayoutItem>

                        <controls:SettingsLayoutItem Header="Delete Account">
                            <controls:SettingsLayoutItem.Content>
                                <StackPanel>
                                    <DockPanel Margin="0,15">
                                        <Button Margin="0,-8,0,0"
                                                VerticalAlignment="Top"
                                                DockPanel.Dock="Right">
                                            <TextBlock Text="Delete" />
                                        </Button>
                                        <StackPanel Margin="0,0,20,0" HorizontalAlignment="Left">
                                            <TextBlock FontSize="15"
                                                       FontWeight="DemiBold"
                                                       Text="Delete" />
                                            <TextBlock Margin="0,7,0,0"
                                                       FontSize="13"
                                                       Text="Delete your account forever and loose all your data"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DockPanel>
                                    <Border Height="400" />
                                </StackPanel>
                            </controls:SettingsLayoutItem.Content>
                        </controls:SettingsLayoutItem>
                    </objectModel:ObservableCollection>
                </controls:SettingsLayout.Items>
            </controls:SettingsLayout>
        </controls:SukiStackPage.Content>
    </controls:SukiStackPage>
</UserControl>