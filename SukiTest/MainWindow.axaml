<Window
    Title="SukiTest"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="SukiTest.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="File" />
                <MenuItem Header="Edit" />
                <MenuItem Header="Help" />
            </MenuItem>
            <MenuItem Header="Edit" />
            <MenuItem Header="Help" />
        </Menu>

        <ScrollViewer>

            <WrapPanel Background="#fafafa" Orientation="Horizontal">

                <Border Classes="Card Hoverable" Width="300">

                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Hoverable Card</TextBlock>

                    </StackPanel>
                </Border>


                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">ListBox</TextBlock>
                        <ListBox Margin="10">
                            <TextBlock>item 1</TextBlock>
                            <TextBlock>item 2</TextBlock>
                            <TextBlock>item 3</TextBlock>
                        </ListBox>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Buttons</TextBlock>
                        <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">

                            <Button Classes="Primary">
                                <TextBlock>Primary</TextBlock>
                            </Button>
                            <Button Classes="Secondary">
                                <TextBlock>Secondary</TextBlock>
                            </Button>
                            <Button>
                                <TextBlock>Neutral</TextBlock>
                            </Button>
                            <Button Classes="Success">
                                <TextBlock>Success</TextBlock>
                            </Button>
                            <Button Classes="Danger">
                                <TextBlock>Danger</TextBlock>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                </Border>


                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">MessageBox</TextBlock>
                        <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">

                            <Button    Classes="Secondary" Click="ShowInfoBox">
                              
                                <TextBlock>Show Info</TextBlock>
                            </Button>
                            <Button Classes="Success" Click="ShowSuccessBox">
                                <TextBlock>Show Sucess</TextBlock>
                            </Button>

                            <Button Classes="Danger" Click="ShowDangerBox">
                                <TextBlock>Show Error</TextBlock>
                            </Button>

                        </WrapPanel>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Notification</TextBlock>
                        <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">

                            <Button Classes="Primary" Click="ShowNotification">
                                <TextBlock>Show Notification</TextBlock>
                            </Button>

                        </WrapPanel>
                    </StackPanel>
                </Border>


                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">ComboBox</TextBlock>
                        <ComboBox PlaceholderText="Select an item">
                            <ComboBoxItem>
                                <TextBlock>Main Item 1</TextBlock>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock>Main Item 2</TextBlock>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Border>


                <Border Classes="Card" Width="300">
                    <StackPanel>

                        <TextBlock Classes="h3" Margin="5,0,0,15">ToggleSwitch</TextBlock>
                        <ToggleSwitch
                            Margin="5"
                            OffContent="No"
                            OnContent="Yes" />
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Progress Bar</TextBlock>
                        <ProgressBar Margin="10" Value="60" />
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Menu</TextBlock>
                        <Menu>
                            <MenuItem Header="File">
                                <MenuItem Header="File" />
                                <MenuItem Header="Edit" />
                                <MenuItem Header="Help" />
                            </MenuItem>
                            <MenuItem Header="Edit" />
                            <MenuItem Header="Help" />
                        </Menu>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">DataGrid</TextBlock>
                        <DataGrid
                            AutoGenerateColumns="True"
                            Height="100"
                            IsReadOnly="True"
                            Name="myDG" />
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Calendar</TextBlock>
                        <Calendar Margin="5" />
                    </StackPanel>
                </Border>
                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Expander</TextBlock>
                        <Expander Header="Click To Expand">
                            <TextBlock>Expanded</TextBlock>
                        </Expander>
                        <Expander Classes="Naked" Header="Click To Expand Naked">
                            <TextBlock>Expanded</TextBlock>
                        </Expander>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Numeric UpDown</TextBlock>
                        <NumericUpDown />
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Radio Button</TextBlock>
                        <StackPanel Orientation="Vertical">
                            <RadioButton Margin="5">Item 1</RadioButton>
                            <RadioButton Margin="5">Item 1</RadioButton>
                            <RadioButton Margin="5">Item 1</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Slider</TextBlock>
                        <Slider />
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">Tabs</TextBlock>
                        <Border Padding="20">
                            <TabControl>
                                <TabItem Header="Tab 1" />
                                <TabItem Header="Tab 2" />
                                <TabItem Header="Tab 3" />
                            </TabControl>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">TextBox</TextBlock>
                        <Border Padding="20">
                            <TextBox Text="Element" />
                        </Border>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">TextBlock</TextBlock>
                        <StackPanel>
                            <TextBlock Classes="h1">h1</TextBlock>
                            <TextBlock Classes="h2">h2</TextBlock>
                            <TextBlock Classes="h3">h3</TextBlock>
                            <TextBlock Classes="h4">h4</TextBlock>
                            <TextBlock>Normal</TextBlock>
                            <TextBlock Classes="Accent">Accent</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">TreeView</TextBlock>
                        <Border
                            Background="White"
                            Padding="20"
                            Width="200">
                            <TreeView>
                                <TreeViewItem Header="blub">
                                    <TreeViewItem Header="blub" />
                                    <TreeViewItem Header="blub" />
                                </TreeViewItem>
                                <TreeViewItem Header="blub" />
                                <TreeViewItem Header="blub" />
                            </TreeView>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <StackPanel>
                        <TextBlock Classes="h3" Margin="5,0,0,15">CircleProgressBar</TextBlock>
                        <Border
                            Background="White"
                            Padding="20"
                            Width="200">
                            <suki:CircleProgressBar
                                Height="150"
                                StrokeWidth="12"
                                Value="50"
                                Width="150">
                                <TextBlock Classes="h3">50 %</TextBlock>
                            </suki:CircleProgressBar>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Classes="Card" Width="300">
                    <Border.ContextMenu>

                        <ContextMenu>
                            <MenuItem Header="Menu item 1" />
                            <MenuItem Header="Menu item 2" />
                            <Separator />
                            <MenuItem Header="Menu item 3" />
                        </ContextMenu>

                    </Border.ContextMenu>
                    <StackPanel>
                        <TextBlock Classes="h4" Margin="5,0,0,15">ContextMenu (right click)</TextBlock>

                    </StackPanel>
                </Border>

              <Border Classes="Card" Width="300">

                <StackPanel>
                  <TextBlock Classes="h4" Margin="5,0,0,15">Loading</TextBlock>
                  <suki:Loading></suki:Loading>
                </StackPanel>
              </Border>


            </WrapPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
