<UserControl
    d:DesignHeight="1050"
    d:DesignWidth="700"
    mc:Ignorable="d"
    x:Class="AndroidTest.Views.SettingsPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:material="using:Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
      <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="0,0,-15,0">
        <StackPanel Orientation="Vertical">
          <StackPanel Margin="0,-20,0,0">
            <DockPanel Margin="10,0,0,0">
         
              <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,0,0">
                <material:MaterialIcon DockPanel.Dock="Left" Kind="UserCircleOutline" Margin="0,20,0,0" Height="90" Width="90" Foreground="DarkGray"></material:MaterialIcon>

                <TextBlock Text="Jean Valjean" HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold" Margin="0,10,0,0"></TextBlock>
                <TextBlock Text="JeanValjean@mymail.com"  FontSize="14" FontWeight="Thin" Margin="0,2,0,0"></TextBlock>
              </StackPanel>
              <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="15,45,0,0">


                  <TextBlock Text="128" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold"  FontSize="40" Margin="0,2,0,0"></TextBlock>
                  <TextBlock Text="Level" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Thin"  FontSize="14" Margin="0,0,0,0"></TextBlock>

                </StackPanel>


                <Border Width="2" Margin="30,60,0,20" HorizontalAlignment="Left" Background="WhiteSmoke" ></Border>
              </Grid>
              
            </DockPanel>
            <Border Height="1"  HorizontalAlignment="Center" Background="LightGray" Margin="30,15"></Border>
          </StackPanel>
            <Grid Height="10" />


            <Border Background="White">
                <DockPanel Margin="20,11,30,16">
                    <material:MaterialIcon Margin="0,5,0,0"
                        DockPanel.Dock="Left"
                        Foreground="#333333"
                        Height="25"
                        Kind="LightbulbOnOutline"
                        Width="25" />
                    <ToggleSwitch
                        DockPanel.Dock="Right"
                        Margin="0,6,0,0"
                        OffContent=""
                        OnContent="">
                        <ToggleSwitch.OffContent>
                            <TextBlock Text="" />
                        </ToggleSwitch.OffContent>
                        <ToggleSwitch.OnContent>
                            <TextBlock Text="" />
                        </ToggleSwitch.OnContent>

                      <ToggleSwitch.RenderTransform>
                        <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                      </ToggleSwitch.RenderTransform>
                    </ToggleSwitch>
                    <TextBlock
                        FontSize="19"
                        FontWeight="Medium"
                        Margin="30,8,0,0"
                        Text="Dark Theme"
                        VerticalAlignment="Center" />
                </DockPanel>
            </Border>
            <Border Background="White">
             
                <Border
                    Background="LightGray"
                    Height="1" BorderBrush="Transparent" 
                    HorizontalAlignment="Stretch"
                    Margin="50,0,60,0" />
            </Border>

          <Border Background="White">
            <DockPanel Margin="20,11,30,16">
              <material:MaterialIcon  Margin="0,5,0,0"
                  DockPanel.Dock="Left"
                  Foreground="#333333"
                  Height="25"
                  Kind="Language"
                  Width="25" />
              <material:MaterialIcon
                  DockPanel.Dock="Right"
                  Foreground="DarkGray"
                  Height="25"
                  Kind="ChevronRight"
                  Margin="0,6,5,0"
                  Width="25" />

              <TextBlock
                  FontSize="19"
                  FontWeight="Medium"
                  Margin="30,8,0,0"
                  Text="Langage"
                  VerticalAlignment="Center" />
            </DockPanel>
          </Border>

         

        
          <Border Background="White">

            <Border
                Background="LightGray"
                Height="1" BorderBrush="Transparent"
                HorizontalAlignment="Stretch"
                Margin="50,0,60,0" />
          </Border>

          <Border Background="White">
            <DockPanel Margin="20,11,30,16">
              <material:MaterialIcon Margin="0,5,0,0"
                  DockPanel.Dock="Left"
                  Foreground="#333333"
                  Height="25"
                  Kind="NotificationsNone"
                  Width="25" />
              <ToggleSwitch
                  DockPanel.Dock="Right"
                  IsChecked="True"
                  OffContent=""
                  OnContent="">
                <ToggleSwitch.OffContent>
                  <TextBlock Text="" />
                </ToggleSwitch.OffContent>
                <ToggleSwitch.OnContent>
                  <TextBlock Text="" />
                </ToggleSwitch.OnContent>
                <ToggleSwitch.RenderTransform>
                  <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                </ToggleSwitch.RenderTransform>
              </ToggleSwitch>
              <TextBlock
                  FontSize="19"
                  FontWeight="Medium"
                  Margin="30,8,0,0"
                  Text="Notifications"
                  VerticalAlignment="Center" />
            </DockPanel>
          </Border>
         
          <Border Background="White">

            <Border
                Background="LightGray"
                Height="1" BorderBrush="Transparent"
                HorizontalAlignment="Stretch"
                Margin="50,0,60,0" />
          </Border>

          <Border Background="White">
            <DockPanel Margin="20,11,30,16">
              <material:MaterialIcon Margin="0,5,0,0" VerticalAlignment="Top"
                  DockPanel.Dock="Left"
                  Foreground="#333333"
                  Height="25"
                  Kind="Brightness3"
                  Width="25" />
              <Slider DockPanel.Dock="Bottom" Minimum="0" Maximum="100" Value="67" Margin="23,0,5,0"></Slider>
              <TextBlock
                  FontSize="19"
                  FontWeight="Medium"
                  Margin="30,8,0,0"
                  Text="Brightness"
                  VerticalAlignment="Center" />

             


            </DockPanel>
          </Border>

            <Grid Height="10" />

          <Border Background="White">
            <DockPanel Margin="20,11,30,16">
              <material:MaterialIcon  Margin="0,5,0,0"
                  DockPanel.Dock="Left"
                  Foreground="#333333"
                  Height="25"
                  Kind="BatteryOutline"
                  Width="25" />
              <material:MaterialIcon
                  DockPanel.Dock="Right"
                  Foreground="DarkGray"
                  Height="25"
                  Kind="ChevronRight"
                  Margin="0,6,5,0"
                  Width="25" />

              <TextBlock
                  FontSize="19"
                  FontWeight="Medium"
                  Margin="30,8,0,0"
                  Text="Battery"
                  VerticalAlignment="Center" />
            </DockPanel>
          </Border>

          <Border Background="White">
            <Border
                            Background="LightGray"
                            Height="1" BorderBrush="Transparent"
                            HorizontalAlignment="Stretch"
                            Margin="50,0,60,0" />
          </Border>



          <Border Background="White">
            <DockPanel Margin="20,11,30,16">
              <material:MaterialIcon  Margin="0,5,0,0"
                  DockPanel.Dock="Left"
                  Foreground="#333333"
                  Height="20"
                  Kind="Help"
                  Width="25" />
              <material:MaterialIcon
                  DockPanel.Dock="Right"
                  Foreground="DarkGray"
                  Height="25"
                  Kind="ChevronRight"
                  Margin="0,6,5,0"
                  Width="25" />

              <TextBlock
                  FontSize="19"
                  FontWeight="Medium"
                  Margin="30,8,0,0"
                  Text="Help"
                  VerticalAlignment="Center" />
            </DockPanel>
          </Border>

          <Border Background="White">
            <Border
                            Background="LightGray"
                            Height="1" BorderBrush="Transparent"
                            HorizontalAlignment="Stretch"
                            Margin="50,0,60,0" />
          </Border>



          <Border Background="White">
            <DockPanel Margin="20,11,30,16">
              <material:MaterialIcon  Margin="0,7,0,0"
                  DockPanel.Dock="Left"
                  Foreground="#333333"
                  Height="20"
                  Kind="Update"
                  Width="25" />
              <material:MaterialIcon
                  DockPanel.Dock="Right"
                  Foreground="DarkGray"
                  Height="25"
                  Kind="ChevronRight"
                  Margin="0,6,5,0"
                  Width="25" />

              <TextBlock
                  FontSize="19"
                  FontWeight="Medium"
                  Margin="30,8,0,0"
                  Text="Update"
                  VerticalAlignment="Center" />
            </DockPanel>
          </Border>

          <Grid Height="10" />

         

          <Border Background="White">
            <DockPanel Margin="20,11,30,16">
              <material:MaterialIcon  Margin="0,5,0,0"
                  DockPanel.Dock="Left"
                  Foreground="#333333"
                  Height="25"
                  Kind="BatteryOutline"
                  Width="25" />
              <material:MaterialIcon
                  DockPanel.Dock="Right"
                  Foreground="DarkGray"
                  Height="25"
                  Kind="ChevronRight"
                  Margin="0,6,5,0"
                  Width="25" />

              <TextBlock
                  FontSize="19"
                  FontWeight="Medium"
                  Margin="30,8,0,0"
                  Text="Battery"
                  VerticalAlignment="Center" />
            </DockPanel>
          </Border>

          <Border Background="White">
            <Border
                            Background="LightGray"
                            Height="1" BorderBrush="Transparent"
                            HorizontalAlignment="Stretch"
                            Margin="50,0,60,0" />
          </Border>



          <Border Background="White">
            <DockPanel Margin="20,11,30,16">
              <material:MaterialIcon  Margin="0,5,0,0"
                  DockPanel.Dock="Left"
                  Foreground="#333333"
                  Height="20"
                  Kind="Help"
                  Width="25" />
              <material:MaterialIcon
                  DockPanel.Dock="Right"
                  Foreground="DarkGray"
                  Height="25"
                  Kind="ChevronRight"
                  Margin="0,6,5,0"
                  Width="25" />

              <TextBlock
                  FontSize="19"
                  FontWeight="Medium"
                  Margin="30,8,0,0"
                  Text="Help"
                  VerticalAlignment="Center" />
            </DockPanel>
          </Border>

          <Border Background="White">
            <Border
                            Background="LightGray"
                            Height="1" BorderBrush="Transparent"
                            HorizontalAlignment="Stretch"
                            Margin="50,0,60,0" />
          </Border>



          <Border Background="White">
            <DockPanel Margin="20,11,30,16">
              <material:MaterialIcon  Margin="0,7,0,0"
                  DockPanel.Dock="Left"
                  Foreground="#333333"
                  Height="20"
                  Kind="Update"
                  Width="25" />
              <material:MaterialIcon
                  DockPanel.Dock="Right"
                  Foreground="DarkGray"
                  Height="25"
                  Kind="ChevronRight"
                  Margin="0,6,5,0"
                  Width="25" />

              <TextBlock
                  FontSize="19"
                  FontWeight="Medium"
                  Margin="30,8,0,0"
                  Text="Update"
                  VerticalAlignment="Center" />
            </DockPanel>
          </Border>

          <Grid Height="10" />

        </StackPanel>

      </ScrollViewer>
    </DockPanel>
</UserControl>
